# #!/bin/bash
snippet #!
	#!/bin/bash
	

snippet if
	if [ ${1:condition} ]; then
		${2}
	fi

snippet elif
	elif [ ${1:condition} ]; then
		${2}

snippet for
	for (( ${2:i} = 0; $2 < ${1:count}; $2++ )); do
		${3}
	done

snippet wh
	while [ ${1:condition} ]; do
		${2}
	done

snippet until
	until [ ${1:condition} ]; do
		${2:#statements}
	done

snippet case
	case ${1:word} in
		${2:pattern})
			${3};;
	esac

