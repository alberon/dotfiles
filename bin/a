#!/bin/bash

# 'a' = Asset builder (Awe, Gulp or npm as appropriate)

# Gulp
if dir="$(findup -e gulpfile.js -o -e gulpfile.coffee)"; then
    exec gulp "$@"
fi

# Awe (http://awe.alberon.co.uk/ - Deprecated)
if dir="$(findup -f awe.yaml)"; then
    exec awe "$@"
fi

# npm
if dir="$(findup -f package.json)"; then
    exec npm run "$@"
fi

echo "Cannot find gulpfile.js, awe.yaml or package.json" >&2
exit 1
